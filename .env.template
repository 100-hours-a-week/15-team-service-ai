# Environment
ENVIRONMENT=development

# OpenAI
OPENAI_API_KEY=your-openai-api-key
LLM_GENERATOR_MODEL=gpt-5.2-codex                                             
LLM_EVALUATOR_MODEL=gpt-4o

# Callback
BACKEND_CALLBACK_URL=https://your-backend.com/api/callback

# Timeout
GITHUB_TIMEOUT=60.0
OPENAI_TIMEOUT=120.0
CALLBACK_TIMEOUT=120.0

# Rate Limiting
GITHUB_MAX_CONCURRENT_REQUESTS=5

# Callback Retry
CALLBACK_MAX_RETRIES=3
CALLBACK_RETRY_BASE_DELAY=1.0

# Workflow
WORKFLOW_MAX_RETRIES=2
WORKFLOW_BATCH_SIZE=3

# Logging
LOG_LEVEL=INFO

# Langfuse
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_BASE_URL=https://cloud.langfuse.com
