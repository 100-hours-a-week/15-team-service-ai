# Environment
ENVIRONMENT=development

# LLM 프로바이더 선택: "openai" 또는 "vllm"
LLM_PROVIDER=vllm

# OpenAI 설정 - 개발/테스트용
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=120.0

# vLLM/RunPod 설정 - 운영용
VLLM_API_URL=https://api.runpod.ai/v2/{endpoint_id}/openai/v1
VLLM_API_KEY=your-runpod-api-key
VLLM_MODEL=skt/A.X-4.0-light
VLLM_TIMEOUT=180.0

# Gemini 설정 - 이력서 평가용
GEMINI_API_KEY=your-google-ai-api-key
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_TIMEOUT=120.0

# Callback
BACKEND_CALLBACK_URL=https://your-backend.com/api/callback

# Timeout
GITHUB_TIMEOUT=60.0
CALLBACK_TIMEOUT=120.0

# Rate Limiting
GITHUB_MAX_CONCURRENT_REQUESTS=5

# Callback Retry
CALLBACK_MAX_RETRIES=3
CALLBACK_RETRY_BASE_DELAY=1.0

# Workflow
WORKFLOW_MAX_RETRIES=2
WORKFLOW_BATCH_SIZE=3

# Logging
LOG_LEVEL=INFO

# Langfuse
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# AI-Backend Callback
AI_CALLBACK_SECRET=your-callback-secret

# CORS 
CORS_ALLOWED_ORIGINS=https://your-spring-server.com
